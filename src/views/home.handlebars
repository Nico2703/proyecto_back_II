<div>
    {{#if error}}
        <ul>
            <li>
                <p style="color: red; font-weight: bold;">{{error}}</p>
            </li>
        </ul>
    {{else}}
        <h1>Bienvenido/a</h1>
        <ul>
            <li>
                <h3>Usuario:</h3>
                <h1>{{user.last_name}}, {{user.first_name}}</h1>
                <p>Email: {{user.email}}</p>
                <p>Edad: {{user.age}}</p>
                <p>Rol: {{user.role}}</p>
            </li>
        </ul>
    {{/if}}
</div>